<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Creo l'ombra del fab disegnando 4 cerchi grigi sempre piÃ¹ opachi -->
    <item>
        <shape android:shape="oval">
            <padding android:top="0dp" android:right="0dp" android:bottom="1.5dp" android:left="0dp" />
            <solid android:color="#20CCCCCC" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding android:top="0dp" android:right="0dp" android:bottom="1.5dp" android:left="0dp" />
            <solid android:color="#40CCCCCC" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding android:top="0dp" android:right="0dp" android:bottom="1.5dp" android:left="0dp" />
            <solid android:color="#60CCCCCC" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding android:top="0dp" android:right="0dp" android:bottom="1.5dp" android:left="0dp" />
            <solid android:color="#80CCCCCC" />
        </shape>
    </item>

    <!-- Riempio il cerchio con i colori accent -->
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <solid android:color="@color/accentSelected"/>
                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/accent"/>
                </shape>
            </item>
        </selector>
    </item>

</layer-list>